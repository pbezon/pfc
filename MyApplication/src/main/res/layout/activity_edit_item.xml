<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:columnOrderPreserved="false"
    android:stretchColumns="1"
    android:shrinkColumns="1"
    android:paddingTop="15dp">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_column="0"
            android:background="@android:drawable/ic_menu_edit" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:id="@+id/nameEdit"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_above="@+id/scannedCodeFragment"
            android:layout_alignParentLeft="true"
            android:layout_column="1"
            android:hint="Name" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/typeEdit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/holo_blue"
            android:entries="@array/productTypes"
            android:layout_above="@+id/textView7"
            android:layout_alignLeft="@+id/scannedCodeFragment"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:inputType="textMultiLine"
            android:id="@+id/descriptionEdit"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_column="1"
            android:hint="Description" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:layout_column="0"
            android:background="@android:drawable/ic_menu_info_details" />

        <EditText
            android:id="@+id/editStatusDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/holo_blue"
            android:enabled="false"
            android:layout_weight="1"
            android:layout_below="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:singleLine="true"
            android:layout_column="1"
            android:background="@android:drawable/editbox_background_normal" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_column="0"
            android:background="@android:drawable/ic_menu_camera" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageViewEdit"
            android:clickable="false"
            android:cropToPadding="false"
            android:scaleType="center"
            android:src="@android:drawable/ic_menu_crop"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_column="0"
            android:background="@android:drawable/ic_menu_month" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editCalendarDescription"
            android:layout_column="1"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="No event created - touch to add -" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editCalendarReminder"
            android:layout_column="1"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="-" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_column="0"
            android:background="@android:drawable/ic_menu_my_calendar" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editContactName"
            android:layout_column="1"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="No contact assigned" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:layout_column="0"
            android:background="@android:drawable/ic_menu_call" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editContactPhone"
            android:layout_column="1"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="-" />
    </TableRow>


</TableLayout>